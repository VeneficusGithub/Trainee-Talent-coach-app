{
  "name": "Python 3 Streamlit App",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bookworm",
  
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "app.py"
      ]
    },
    "vscode": {
      "settings": {
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "python.linting.enabled": true
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance"
      ]
    }
  },

  // Use onCreateCommand for one-time package installation.
  // Make sure 'streamlit' and 'black' are in your requirements.txt!
  "onCreateCommand": "pip3 install --user -r requirements.txt",

  // Start the server after attaching, without disabling security features.
  "postAttachCommand": {
    "server": "streamlit run app.py"
  },

  // Configure and forward the port.
  "portsAttributes": {
    "8501": {
      "label": "Streamlit App",
      "onAutoForward": "openPreview"
    }
  },
  "forwardPorts": [8501]
}
